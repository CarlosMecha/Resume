\ProvidesPackage{lib/resume}

% A horizontal line page-width
\newcommand{\horizontalLine}{
  \line(1,0){482}
}

% Section title.
% param1: Title
\newcommand{\titlesec}[1]{
  \vspace{0.2em}
  \begin{center}
    \horizontalLine\\
    \textbf{#1}\\
    \vspace{-0.7em}
    \horizontalLine
  \end{center}
  \vspace{0.2em}
}

% Résumé header.
% param1: By default your name.
% param2: Your existing title.
% param3: LinkedIn profile.
% param4: Your contact information.
% param5: Address or status.
\newcommand{\header}[5]{
  \begin{center}
    \uppercase{\textbf{\Huge#1}}\\
    \uppercase{\textbf{#2}}\\
    \textbf{\emph{#3}}\\
    {\small{#4}}\\
    {\small{#5}}

  \end{center}
}

% A education entry.
% param1: Date.
% param2: Title.
% param3: Place.
% param4: Description.
\newcommand{\education}[4]{
  #1: \textbf{\emph{#2}} (#3). #4
}

% A experience entry.
% param1: Date.
% param2: Company.
% param3: Position.
% param4: Description. It could be a list or paragraph.
\newcommand{\experience}[4]{
  #1, \underline{#2}\\
  \textbf{\emph{#3}}\\
  #4
}

% Default list for résumés
\newenvironment{rlist}
  {\vspace{-0.2em}\begin{itemize}
    \itemsep3pt \parskip0pt \parsep1pt}
  {\end{itemize}}
